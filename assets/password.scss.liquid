html, body {
	padding:0;
	margin:0;
	height:100%;
}

.section {
    padding:30px;
    margin-bottom:30px;
}

#PageContainer {
	margin-top:0;
	padding-top:0;
	height:100%;
	background-image:url('{{ "hero.png" | asset_url }}');
	background-position: center;
	background-size:cover;
	background-repeat:no-repeat;
	overflow:auto;
}

.main-content {
	text-align:center;
	height:100%;
	width:100%;
	max-width:100%;
	margin:0;
	padding:0;
	background:transparent;
	color:#4E4E4E;
	font-size:24px;
	font-weight:900;
}

.password-message {
	margin:10px 0;
  	color:#00C100;
}

.social-links {
	margin-top:20px;
	& > a {
	    margin: 0 10px;
	    color: #4E4E4E;
	    font-size: 1em;

	    &:hover {
	    	color: #459149;
	    }
	}
}

form#login_form {
    position: absolute;
    bottom: 10px;
    right: 0;
    left: 0;
}

.interest-form-wrap {
	min-width:200px;
	width:50%;
    margin: auto;

}

.input-group-field, .input-group-btn {
	vertical-align: inherit;
}

#primary-logo {
	width:25%;
	min-width:200px;
}

// Vertical Align
.v-align-wrap {

	position: absolute;
    left: 0;
    right: 0;
    bottom: 0;
    top: 0;
    width: 100%;
    height: 100%;
    display: table;
    margin: 0 auto;

    .v-align {
        display: table-cell;
        vertical-align: middle;
    }
}

@media screen and (max-width: 480px) {
  .main-content {
    font-size:20px!important; 
  }
}


